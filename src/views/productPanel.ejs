<%- include('./partials/headerPanel') %>



  <div class="container mt-5">
    <div class="d-flex justify-content-end mb-3">
      <a href="/add-product" class="btn btn-primary" ><i class="fas fa-plus"></i> Agregar Nuevo Producto</a>
  </div>
  <% if (product.length > 0) {%>
    <table id="productosTable" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Cantidad</th>
          <th>Precio</th>
          <th>Color</th>
          <th>Talla</th>
            <th>Des</th>
          <th>Imagen</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% product.forEach(item => { %> 
          <tr>
          <td><%=item.nameProduct  %></td>
          <td><%=item.amount  %></td>
          <td><%=item.price  %></td>
          <td><%=item.color  %></td>
          <td><%=item.size  %></td>
        <td>
        <% if(item.outstanding === null){%>
             <i class="fas fa-times"></i>
          <%}else{%><i class="fas fa-check"></i>
          <%} %>
        </td>
          <td><img src="<%=item.image%>"  width="50px" alt=""></td>
          <td><a href="/update-product/<%=item.idProduct %>"><i class="fas fa-edit"></i></a>
            <a onclick="deleteProduct('<%=item.idProduct %>','<%=item.nameProduct %>')"><i class="fas fa-trash-alt"></i></a></td>
          </tr>
        <% }); %>
   

        
      </tbody>
    </table>

  
  <%}else{%>
    <span>productos no disponibles</span>
  
  <%

  }
  
  %>

  </div>

<%- include('./partials/footerPanel') %>