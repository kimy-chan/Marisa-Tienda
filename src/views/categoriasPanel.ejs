<%- include('./partials/headerPanel') %>
  <div class="container mt-5">
    <%if(mensaje) {%>
      <div class="alert alert-danger" role="alert">
        <%=mensaje%>
      </div>
      <% } %>
        <h2>Añadir Categoría</h2>
        <form id="categoriaForm" action="/add-category" method="post" enctype="multipart/form-data">
          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="nombreCategoria">Nombre de la Categoría</label>
              <input type="text" class="form-control" name="categoria" required>
            </div>
            <div class="form-group col-md-4">
              <label for="fotoCategoria">Foto de la Categoría</label>
              <input type="file" class="form-control-file" name="images" accept="image/*" required>
            </div>
            <div class="form-group col-md-4">
              <button class="btn" style="background: #D09456; color: white;">Agregar Categoría</button>
            </div>
          </div>
        </form>

        <h2>Tabla de Categorías</h2>
        <% if (categories.length> 0) { %>
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Nombre de la Categoría</th>
                <th>Foto de la Categoría</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>

              <% categories.forEach(item=> { %>
                <tr>
                  <td>
                    <%= item.nameCategory %>
                  </td>
                  <td><img src="<%= item.image %>" alt="Category" width="50"></td>
                  <td> <a href="/update-category/<%=item.idCategory  %>"><i class="fas fa-edit"
                        style="color: #D09456; "></i></a>
                    <a onclick="deleteCategory('<%=item.idCategory%>','<%=item.nameCategory%>','<%=item.imageId%>')"> <i
                        class="fas fa-trash-alt text-danger"></i></a>
                  </td>
                  </td>
                </tr>
                <% }); %>


            </tbody>
          </table>
          <% } else { %>
            <div class="alert alert-secondary" role="alert">
              Categoria vacias
            </div>
            <% } %>
  </div>

  <%- include('./partials/footerPanel') %>