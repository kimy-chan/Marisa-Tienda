<%- include('./partials/headerPanel') %>

  <% if (venta.length > 0) {%>
    <table id="productosTable" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Nombres</th>
          <th>Producto</th>
          <th>Talla</th>
          <th>Cantidad</th>
          <th>Total</th>
          <th>Fecha y hora de venta</th>

         
       
      
        
       
   
        </tr>
      </thead>
      <tbody>
        <% venta.forEach(item => { %> 
          <tr>
          <td><%=item.firstName  %> <%= item.motherLastName%></td>
          <td><%=item.nameProduct  %></td>
          <td><%=item.size  %></td>
          <td><%=item.amount  %></td>
          <td><%=item.total  %></td>
          <td><%=item.FechaCompleta%> - <%=item.Hora%></td>
    
          </tr>
        <% }) %>
   

        
      </tbody>
    </table>

  
  <%}else{%>
    <span>Pedidos no disponibles</span>
  
  <%

  }
  
  %>

  </div>

  <!-- Agrega los scripts de jQuery, Bootstrap y DataTables -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>




  <script>
    $(document).ready(function() {
      // Inicializar DataTables con configuración básica y estilo de Bootstrap
      $('#productosTable').DataTable({
        // Aquí puedes personalizar la configuración según tus necesidades
        language: {
          url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/Spanish.json' // Agrega el archivo de idioma deseado
        }
      });

    
    });
  
    </script>
</body>
</html>
