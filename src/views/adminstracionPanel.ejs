<%- include('./partials/headerPanel') %>


  <div class="container mt-5">
    <h2>Panel de Administración</h2>
    <div class="d-flex flex-wrap">
      <a href="/products-panel" class="admin-link btn btn-light">
        <i class="fas fa-box icon"></i> Productos
        <span class="badge badge-light mt-2">
          <%=products%>
        </span>
      </a>
      <a href="#" class="admin-link btn btn-light">
        <i class="fas fa-user icon"></i> Suscriptores
        <span class="badge badge-light mt-2">450</span>
      </a>
      <a href="/ventas" class="admin-link btn btn-light">
        <i class="fas fa-chart-line icon"></i> Ventas
        <span class="badge badge-light mt-2">
          <%= sales %>
        </span>
      </a>
      <a href="/user" class="admin-link btn btn-light">
        <i class="fas fa-users icon"></i> Usuarios
        <span class="badge badge-light mt-2">
          <%= user %>
        </span>
      </a>
      <a href="/category-panel" class="admin-link btn btn-light">
        <i class="fas fa-list icon"></i> Categorías
        <span class="badge badge-light mt-2">
          <%=categories %>
        </span>
      </a>
      <a href="/get-order" class="admin-link btn btn-light">
        <i class="fas fa-shopping-cart icon"></i> Pedidos
        <span class="badge badge-light mt-2">
          <%= order %>
        </span>
      </a>
      <!-- Puedes agregar más enlaces aquí si es necesario -->
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  </body>

  </html>