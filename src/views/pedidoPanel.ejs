<%- include('./partials/headerPanel') %>

<div class="container">
  <% if (pedido.length > 0) {%>
    <table class="table table-striped table-bordered" id="productosTable" >
      <thead>
        <tr>
          <th>Nombres</th>
          <th>Producto</th>
          <th>Talla</th>
          <th>Cantidad</th>
          <th>Estado</th> 
          <th>Celular</th>
          <th>Direccion</th>
          <th>Fecha y hora</th>
          <th>Estado de entrega</th>
         
       
      
        
       
   
        </tr>
      </thead>
      <tbody>
        <% pedido.forEach(item => { %> 
          <tr>
          <td><%=item.firstName  %> <%= item.motherLastName%></td>
          <td><%=item.nameProduct  %></td>
          <td><%=item.size  %></td>
          <td><%=item.amount  %></td>
          <td><%=(item.stateOrder) === 1 ? 'llevar':'recoger' %></td>
          <td><%=item.Cell  %></td>
          <td><%=item.address  %></td>
          <th><%= item.FechaCompleta  %>  <%=item.Hora  %> </th>
          <th><a href="/vender/<%=item.idOrder  %>" class="btn btn-success"><i class="fas fa-truck"></i></a></th>
          </tr>
        <% }) %>
   

        
      </tbody>
    </table>

  
  <%}else{%>
    <span>Pedidos no disponibles</span>
  
  <%

  }
  
  %>

</div>
  <!-- Agrega los scripts de jQuery, Bootstrap y DataTables -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>




  <script>
    $(document).ready(function() {
      // Inicializar DataTables con configuración básica y estilo de Bootstrap
      $('#productosTable').DataTable({
        // Aquí puedes personalizar la configuración según tus necesidades
        language: {
          url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/Spanish.json' // Agrega el archivo de idioma deseado
        }
      });

    
    });
  
    </script>
</body>
</html>
